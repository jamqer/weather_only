<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id = "@+id/container"
    tools:context = ".MainActivity">



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="-400dp"
        android:paddingLeft="@dimen/activity_low_horizontal_margin"
        android:paddingRight="@dimen/activity_low_horizontal_margin"
        android:paddingTop="@dimen/activity_low_vertical_margin"
        android:paddingBottom="@dimen/activity_low_vertical_margin"
        android:id = "@+id/infoLay"
        tools:context = ".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="130sp"
            android:text=""
            android:id="@+id/tV_temp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=""
            android:id="@+id/tV_c"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tV_temp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=""
            android:id="@+id/tV_city"
            android:layout_below="@id/tV_temp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5dp"/>


        </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_low_horizontal_margin"
    android:paddingRight="@dimen/activity_low_horizontal_margin"
    android:paddingTop="@dimen/activity_low_vertical_margin"
    android:paddingBottom="@dimen/activity_low_vertical_margin"
    android:id = "@+id/moveLay">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight = "true"
         />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="5dp"
        android:text=""
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />

</RelativeLayout>

</RelativeLayout>
